{
	"format_version": "1.20.80",
	"minecraft:entity": {
		"description": {
			"identifier": "edu_tools:prompt_npc",
			"is_spawnable": false,
			"is_summonable": true,
			"properties": {
				"edu_tools:skin": {
					"client_sync": true,
					"type": "int",
					"range": [0, 1],
					"default": 0
				}
			}
		},
		"component_groups": {
			"edu_tools:despawn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": false
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": ["shapescape", "edu_tools", "npc", "custom_npc", "prompt_npc"]
			},
			"minecraft:health": {
				"value": 1,
				"max": 1
			},
			"minecraft:physics": {
				"has_collision": false,
				"has_gravity": false
			},
			"minecraft:knockback_resistance": {
				"value": 1
			},
			"minecraft:collision_box": {
				"width": 0,
				"height": 0
			},
			"minecraft:npc": {
				"npc_data": {
					"portrait_offsets": {
						"translate": [-7, 50, 0],
						"scale": [1.75, 1.75, 1.75]
					},
					"picker_offsets": {
						"translate": [0, 20, 0],
						"scale": [1.7, 1.7, 1.7]
					}
				}
			},
			"minecraft:scale": {
				"value": 0
			},
			"minecraft:nameable": {
				"always_show": false,
				"allow_name_tag_renaming": false
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"deals_damage": false
					}
				]
			},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"randomize": [
					{
						"set_property": {
							"edu_tools:skin": 0
						},
						"weight": 1
					},
					{
						"set_property": {
							"edu_tools:skin": 1
						},
						"weight": 1
					}
				]
			},
			"edu_tools:despawn": {
				"add": {
					"component_groups": ["edu_tools:despawn"]
				}
			}
		}
	}
}
