{
	// Disable TypeScript for Deno folders
	"typescript.preferences.importModuleSpecifier": "relative",
	"javascript.preferences.importModuleSpecifier": "relative",

	// Enable Deno only for modular_mc folder
	"deno.enable": false,
	"deno.enablePaths": ["./regolith/filters_data/modular_mc"],
	"deno.config": "./regolith/deno.json",
	"deno.lint": true,
	"deno.unstable": false,

	// Editor settings for tabs
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.detectIndentation": false,

	// Disable TypeScript extension in Deno folders
	"[typescript]": {
		"editor.defaultFormatter": "denoland.vscode-deno",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[javascript]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	}
}
